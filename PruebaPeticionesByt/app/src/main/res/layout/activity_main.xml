<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="waxa.pruebapeticionesbyt.MainActivity">

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/registro"
        android:text="Registro"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/login"
        android:text="Login"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/nuevoPro"
        android:text="Nuevo Projecto"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/unirsePro"
        android:text="Unirse Projecto"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/borrarPro"
        android:text="Borrar Projecto"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/usrInfo"
        android:text="Informacion Usuario"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/proInfo"
        android:text="Informacion Projecto"
        android:layout_weight="20"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="5"/>

</LinearLayout>
